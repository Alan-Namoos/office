<div class="col-8 offset-2">
    <form action="/update/client/<%= client._id %>" method="post" class="bg-light p-3" id="needs-validation">
        <div class="row">
            <div class="col"> <!-- CLIENT DETAILS -->
                <h4>Edit Client Info: <strong><%= client.name.first %> <%= client.name.last %></strong></h4>
                <!-- Name -->
                <div class="row">
                    <div class="col">
                        <div class="form-group"> 
                            <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name" value="<%= client.name.first %>" required>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group"> 
                            <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name" value="<%= client.name.last %>" required>
                        </div>
                    </div>
                </div>
                
                
                <div class="row">
                    <div class="col">
                        <!-- Phone Number -->
                        <div class="form-group"> 
                            <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone Number" value="<%= client.phone %>" required>
                        </div>
                    </div>
                    <div class="col">
                        <!-- Date Of Birth -->
                        <div class="form-group"> 
                            <input type="text" class="form-control" id="birthdate" name="birthdate" placeholder="Date Of Birth" value="<%= client.birthdate %>">
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col">
                        <!-- Home Address -->
                        <div class="form-group">
                            <input type="text" class="form-control" id="home_address" name="home_address"  placeholder="Home Address" value="<%= client.address.home %>">
                        </div>
                    </div>
                    <div class="col">
                        <!-- Work Address -->
                        <div class="form-group">
                            <input type="text" class="form-control" id="work_address" name="work_address"  placeholder="Work Address" value="<%= client.address.work %>" > 
                        </div>
                    </div>
                </div>
        
                <div class="row">
                    <div class="col">
                        <!-- Home Email -->
                        <div class="form-group">
                            <input type="email" class="form-control" id="home_email" name="home_email"  placeholder="Home Email" value="<%= client.email.home %>">
                        </div>
                    </div>
                    <div class="col">
                        <!-- Work Email -->
                        <div class="form-group">
                            <input type="email" class="form-control" id="work_email" name="work_email"  placeholder="Work Email" value="<%= client.email.work %>">
                        </div>
                    </div>
                </div>
                

                <div class="row">
                    <div class="col">
                        <!-- A-Number -->
                        <div class="form-group">
                            <input type="text" class="form-control" id="a_number" name="a_number" placeholder="A-Number" value="<%= client.a_number %>" >
                        </div>
                    </div>
                    <div class="col">
                        <!-- Immigration Status -->
                        <div class="form-group">
                            <select class="form-control" id="immigration_status" name="immigration_status">
                                <option value="None">None</option>
                                <option value="Student">Student</option>
                                <option value="Green Card Holder">Green Card Holder</option>
                                <option value="US Citizen">US Citizen</option>
                            </select>
                        </div>
                    </div>

                    <div class="col">
                        <!-- Employment -->
                        <div class="form-group">
                            <select class="form-control" id="employment" name="employment">
                                <option value="Employed">Employed</option>
                                <option value="Self Employed">Self Emplyed</option>
                                <option value="Unemployed">Unemployed</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div> <!-- END CLIENT DETAILS -->
        </div><!-- row -->

        <hr>



        <!-- BUTTONS - Cancel - Save -->
        <div class="row">
            <div class="col">
                <a href="/client/<%= client._id %>" class="btn btn-warning btn-block">Cancel</a> 
            </div>
            <div class="col">
                <button type="submit" class="btn btn-success btn-block">Save</button>
            </div>
        </div>
    </form>
</div>


